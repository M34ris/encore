local class IntBox
   var bar : int

   def init(bar : int) : unit
      this.bar = bar
      println(this.bar)
   end

   def increment() : unit
      this.bar += 1
      println(this.bar)
   end
end

active class Foo
   var box : IntBox

   def init(bar : int) : unit
      this.box = new IntBox(bar)
   end

   def bestowBox() : bestowed[IntBox]
      bestow(this.box)
   end
end

active class Main
   def main() : unit
      var b = new Foo(11)
      var box = get(b ! bestowBox())
      box ! increment()
      box ! increment()
   end
end
