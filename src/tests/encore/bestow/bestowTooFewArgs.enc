local class IntBox
   var bar : int

   def init(bar : int) : unit
      this.bar = bar
   end

   def setInt(bar : int) : unit
      this.bar = bar
   end
end

active class Foo : Actor
   var box : IntBox

   def init(bar : int) : unit
      this.box = new IntBox(bar)
   end

   def bestowBox() : Bestowed[IntBox]
      bestow(this.box)
   end
end

active class Main
   def main() : unit
      var b = new Foo(11)
      var box = get(b ! bestowBox())
      box ! setInt()
   end
end
