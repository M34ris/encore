active class Foo : Actor
  var i : int

  def init(i : int) : unit
     this.i = i
     println(this.i)
  end
  
  def increment() : unit
     this.i += 1
     println(this.i)
  end
end

active class Main          
  def main() : unit
     var foo = new Foo(11)
     atomic foo as bar in
       if true then
          bar ! increment()
       end
     end
  end
end
